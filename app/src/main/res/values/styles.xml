<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="pchtoast">
        <item name="colorBackground">#FFFFF834</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/ic_toasticon</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">2dp</item>
        <item name="textSize">18dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="pswdmatch">
        <item name="colorBackground">#FFB6FF69</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/ic_sad</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">2dp</item>
        <item name="textSize">18dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="emptyField">
        <item name="colorBackground">#FFC551</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/ic_empty</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">2dp</item>
        <item name="textSize">18dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
